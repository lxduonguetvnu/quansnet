<div class="mt-4">
    <div class="container">
        <h3 class="text-white">Đồ uống</h3>

        <div class="row g-4">    
            {{#each fooddrink}}
            <div class="col-lg-3">
                <div class="card" >
                    <a href="/drink/{{this.id_fooddrink}}">
                        <img class="card-img-top card-img" src="{{this.image}}" alt="Card image cap" height="200px" >
                    </a>
                    <div class="card-body">
                        <a href="/drink/{{this.id_fooddrink}}">
                            <h5 class="card-title">{{this.name}}</h5>
                        </a>
                        <p class="price text-red">{{this.price}}VND</p>
                        <a href="/drink/{{this.id_fooddrink}}/neworders" class="btn btn-primary">Mua Ngay</a>
                    </div>
                </div>
            </div>
            
            {{/each}}
        </div>
    </div>
    
</div>